<h1>Create a new tenant:</h1>

<form action='/tenants' method='post'>
    <label>Name:</label>
    <input type='text' name='tenant[name]'>
    <label>Select Apartment:</label>
    <select name="tenant[apartment_id]" >
        <option disabled selected> --Select an Apartment --</option>
        <% @apartments.each do |apartment| %>
            <option value="<%= apartment.id %>">><%= apartment.address %></option>
        <% end %>
    </select>

    <label>Or, enter a new apartment: </label>
    <input type="text" name="apartment[address]">

    <input type='submit' value='Create Tenant'>
</form>